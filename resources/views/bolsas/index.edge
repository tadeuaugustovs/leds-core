<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Lista de Bolsas</title>
  <style>
    table { border-collapse: collapse; width: 100%; }
    th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
    th { background-color: #f2f2f2; }
    a.button { padding: 4px 8px; background: #4CAF50; color: white; text-decoration: none; border-radius: 4px; }
    a.button.delete { background: #f44336; }
  </style>
</head>
<body>
  <h1>Lista de Bolsas</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Valor</th>
        <th>Tipo Bolsa</th>
        <th>Patrocinador</th>
        <th>Quantidade Membros</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      @each(bolsa in bolsas)
        <tr>
          <td>{{ bolsa.id }}</td>
          <td>{{ bolsa.nome }}</td>
          <td>R$ {{ bolsa.valor }}</td>
          <td>{{ bolsa.tipo_bolsa_id }}</td>
          <td>{{ bolsa.patrocinador || '-' }}</td>
          <td>{{ bolsa.quantidade_membros || 0 }}</td>
          <td>
            <a href="/bolsas/{{ bolsa.id }}/edit" class="button">Editar</a>

            <form action="/bolsas/{{ bolsa.id }}" method="POST" style="display:inline;">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="button delete" onclick="return confirm('Tem certeza que deseja excluir?')">Excluir</button>
            </form>
          </td>
        </tr>
      @endeach
    </tbody>
  </table>

  <br>
  <a href="/bolsas/create" class="button">Adicionar Nova Bolsa</a>
  <br><br>
  <a href="/">Voltar para a Home</a>
</body>
</html>
